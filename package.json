{
  "name": "lint-config",
  "workspaces": [
    "create-lint-config",
    "eslint/*",
    "generator-lint-config",
    "prettier-config"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "release": "release-it",
    "postinstall": "husky install"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "eslint": "^7.31.0",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "release-it": "^14.11.5",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "prettier": "./prettier-config",
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{json,md,yml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "fixtures"
    ]
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true
    },
    "npm": false
  },
  "packageManager": "yarn@3.0.2",
  "volta": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  }
}
