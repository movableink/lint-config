{
  "name": "lint-config",
  "workspaces": [
    "create-lint-config",
    "eslint/*",
    "generator-lint-config",
    "prettier-config"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "release": "lerna publish --conventional-commits"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "husky": "^4.0.0",
    "jest": "^25.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^10.0.3"
  },
  "prettier": "./prettier-config",
  "eslintConfig": {
    "extends": [
      "./eslint/base",
      "./eslint/node"
    ],
    "env": {
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
